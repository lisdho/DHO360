<!-- =========================
     BLOCO 1 (JS)
     Cole dentro do seu <script>
========================= -->
<script>
  // ===== BLOCO 1 (apenas MQ0062 com gráfico; MQ0063 só lista) =====
  const b1Btn = document.getElementById("toggleB1Btn");
  const b1Reveal = document.getElementById("b1Reveal");

  let chart0062 = null;

  const mq0062 = {
    id: "MQ0062",
    n: 29,
    items: [
      { name: "Profissional", pct: 45, desc: "Carreira, propósito, recursos financeiros." },
      { name: "Pessoal", pct: 28, desc: "Saúde, desenvolvimento intelectual, equilíbrio emocional." },
      { name: "Qualidade de Vida", pct: 17, desc: "Diversão, hobbies, felicidade, espiritualidade." },
      { name: "Relacionamentos", pct: 10, desc: "Família, vida social, relacionamento conjugal." }
    ],
    colors: [
      "rgba(233,213,255,.34)",
      "rgba(168,85,247,.28)",
      "rgba(124,58,237,.26)",
      "rgba(192,132,252,.22)"
    ]
  };

  function buildChart0062(){
    const ctx = document.getElementById("chartMq0062");
    if (!ctx) return;

    chart0062 = new Chart(ctx, {
      type: "doughnut",
      data: {
        labels: mq0062.items.map(i => i.name),
        datasets: [{
          data: mq0062.items.map(i => i.pct),
          borderWidth: 1,
          borderColor: "rgba(255,255,255,.08)",
          backgroundColor: mq0062.colors,
          hoverOffset: 6
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        cutout: "55%",
        plugins: {
          legend: { display: false },
          tooltip: {
            callbacks: {
              title: (items) => mq0062.items[items[0].dataIndex].name,
              label: (item) => `${mq0062.items[item.dataIndex].pct}%`,
              afterLabel: (item) => mq0062.items[item.dataIndex].desc
            }
          }
        }
      }
    });
  }

  function openB1(){
    if (!b1Reveal) return;

    b1Reveal.classList.add("open");
    b1Reveal.setAttribute("aria-hidden", "false");
    if (b1Btn) b1Btn.textContent = "Ocultar resultados";

    if(!chart0062) buildChart0062();

    setTimeout(() => {
      chart0062 && chart0062.resize();
    }, 50);
  }

  function closeB1(){
    if (!b1Reveal) return;

    b1Reveal.classList.remove("open");
    b1Reveal.setAttribute("aria-hidden", "true");
    if (b1Btn) b1Btn.textContent = "Ver resultados";
  }

  if (b1Btn && b1Reveal){
    b1Btn.addEventListener("click", () => {
      const isOpen = b1Reveal.classList.contains("open");
      if(isOpen) closeB1();
      else openB1();
    });
  }
</script>

